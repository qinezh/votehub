{
  "name": "votehub-mix",
  "version": "0.1.0",
  "main": "index.js",
  "repository": {},
  "author": "qinezh",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run copy-views",
    "serve": "nodemon dist/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "copy-views": "cp views/build/* dist -r",
    "copy-package": "cp package.json dist",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "predeploy": "npm run build && npm run copy-package",
    "deploy": "gh-pages -d dist -b deploy -o origin -m deploy"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "concurrently": "^3.5.0",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.15.3",
    "mongoose": "^4.11.5",
    "morgan": "^1.8.2",
    "passport": "^0.3.2",
    "passport-github": "^1.1.0",
    "typescript": "^2.4.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/dotenv": "^4.0.0",
    "@types/errorhandler": "^0.0.30",
    "@types/express": "^4.0.36",
    "@types/mongoose": "^4.7.19",
    "@types/morgan": "^1.7.32",
    "@types/node": "^8.0.19",
    "@types/passport": "^0.3.3",
    "@types/passport-github": "^1.1.1",
    "gh-pages": "^1.0.0",
    "nodemon": "^1.11.0"
  }
}